{
  "name": "demo_app",
  "version": "1.0.0",
  "description": "How to deploy a PERN stack node/react app on a AWS EC2 install",
  "main": "app.js",
  "repository": "https://github.com/kidCaulfield/PERN-demo-boilerplate",
  "author": "Wes Coderre",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon app.js",
    "db:create": "createdb -e pern_demo",
    "db:drop": "dropdb --if-exist -e pern_demo",
    "db:migrate": "knex migrate:latest",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
    "redis": "redis-server /usr/local/etc/redis.conf"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "bcrypt": "^3.0.6",
    "connect-redis": "^3.4.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.16.2",
    "knex": "^0.18.3",
    "morgan": "^1.9.1",
    "pg": "^7.11.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.1"
  }
}
